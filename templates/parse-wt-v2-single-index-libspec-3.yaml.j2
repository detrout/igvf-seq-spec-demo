!Assay
seqspec_version: 0.3.0
assay_id: Evercode-WT-v2-single-index
name: Parse Evercode WT v2 using single illumina multiplex index
doi: https://www.protocols.io/view/evercode-wt-mega-v2-2-1-8epv5xxrng1b/v1?step=21
date: 08 November 2023
description: split-pool ligation-based transcriptome sequencing
modalities:
  - rna
# can lib_struct be optional?
lib_struct: "https://igvf.github.io/seqspec/"
library_protocol: {{ library_protocol }}
library_kit: {{ library_kit }}
sequence_protocol: {{ sequence_protocol }}
sequence_kit: {{ sequence_kit }}
  
# TODO what strand are the Read one and two on? I'm just following the
# example I don't really know
sequence_spec:
  - !Read
    read_id: {{ R1_file_id }}.fastq.gz
    name: Read 1 fastq for {{ R1_file_id }}
    modality: rna
    primer_id: truseq_read1
    min_len: {{ R1_min_length }}
    max_len: {{ R1_max_length }}
    strand: pos
    files:
      - !File
        file_id: {{ R1_file_id }}
        filename: {{ R1_file_name }}
        filetype: {{ R1_file_type }}
        filesize: {{ R1_file_size }}
        url: {{ R1_url }}
        urltype: https
        md5: {{ R1_md5sum }}
  - !Read
    read_id: {{ R2_file_id }}.fastq.gz
    name: Read 2 fastq for {{ R2_file_id }}
    modality: rna
    primer_id: truseq_read2
    min_len: {{ R2_min_length }}
    max_len: {{ R2_min_length }}
    strand: neg
    files:
      - !File
        file_id: {{ R2_file_id }}
        filename: {{ R2_file_name }}
        filetype: {{ R2_file_type }}
        filesize: {{ R2_file_size }}
        url: {{ R2_url }}
        urltype: https
        md5: {{ R2_md5sum }}

# Evercode WT mega v2.2.1 protocol
# https://www.protocols.io/view/evercode-wt-mega-v2-2-1-8epv5xxrng1b/v1?step=21
# Includes parse PDF
# From Evercode WT Mega v2.0.1 Usermanual-1.pdf page 60
# The final structure looks like:
# P5 R1 cdna fragment BC1 linker BC2 linker BC3 UMI R2 BC4 P7
# Fairlie explaned there is a 10 bp umi right after the BC3 sequence.
# R2 is "illumina adapter"
# R1 is "illumina adapter"

library_spec:
- !Region
  region_id: rna
  region_type: named
  name: rna
  sequence_type: joined
  sequence: AATGATACGGCGACCACCGAGATCTACACTCTTTCCCTACACGACGCTCTTCCGATCTXNNNNNNNNGTGGCCGATGTTTCGCATCGGCGTACGACTNNNNNNNNATCCACGTGCTTGAGACTGTGGNNNNNNNNNNNNNNNNNNAGATCGGAAGAGCACACGTCTGAACTCCAGTCACNNNNNNNNATCTCGTATGCCGTCTTCTGCTTG
  min_len: 0
  max_len: 0
  onlist: null
  parent_id: null
  regions:
  - !Region
    region_id: illumina_p5
    region_type: illumina_p5
    name: Illumina P5
    sequence_type: fixed
    sequence: AATGATACGGCGACCACCGAGATCTACAC
    min_len: 29
    max_len: 29
    onlist: null
    regions: null
    parent_id: rna
  - !Region
    region_id: truseq_read1
    region_type: truseq_read1
    name: Truseq Single Index Read 1
    sequence_type: fixed
    sequence: TCTTTCCCTACACGACGCTCTTCCGATCT
    min_len: 29
    max_len: 29
    onlist: null
    regions: null
    parent_id: rna
  - !Region
    region_id: {{ R1_file_id }}
    region_type: cdna
    name: Read 1 cDNA sequence
    sequence_type: random
    sequence: X
    min_len: {{ R1_min_length }}
    max_len: {{ R1_max_length }}
    onlist: null
    regions: null
    parent_id: rna
  - !Region
    region_id: barcode-1
    region_type: barcode
    name: barcode-1
    sequence_type: onlist
    sequence: NNNNNNNN
    min_len: 8
    max_len: 8
    onlist: !Onlist
      file_id: IGVFFI0924TKJO
      filename: IGVFFI0924TKJO.txt.gz
      filetype: tsv
      filesize: 339
      location: remote
      url: https://api.data.igvf.org/tabular-files/IGVFFI0924TKJO/@@download/IGVFFI0924TKJO.txt.gz
      urltype: https
      md5: 6d5016e63f121b6a64fb3907dd83f358
    regions: null
    parent_id: rna
  - !Region
    region_id: linker-1
    region_type: linker
    name: linker-1
    sequence_type: fixed
    sequence: ATCCACGTGCTTGAGACTGTGG
    min_len: 22
    max_len: 22
    onlist: null
    regions: null
    parent_id: rna
  - !Region
    region_id: barcode-2
    region_type: barcode
    name: barcode-2
    sequence_type: onlist
    sequence: NNNNNNNN
    min_len: 8
    max_len: 8
    onlist: !Onlist
      file_id: IGVFFI1138MCVX
      filename: IGVFFI1138MCVX.txt.gz
      filetype: tsv
      filesize: 341
      location: remote
      url: https://api.data.igvf.org/tabular-files/IGVFFI1138MCVX/@@download/IGVFFI1138MCVX.txt.gz
      urltype: https
      md5: 1452e8ef104e6edf686fab8956172072
    regions: null
    parent_id: rna
  - !Region
    region_id: linker-2
    region_type: linker
    name: linker-2
    sequence_type: fixed
    sequence: GTGGCCGATGTTTCGCATCGGCGTACGACT
    min_len: 30
    max_len: 30
    onlist: null
    regions: null
