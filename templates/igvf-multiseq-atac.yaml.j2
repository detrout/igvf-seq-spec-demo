  files:
    - !File
      file_id: {{ R1_file_id }}
      filename: {{ R1_file_name }}
      filetype: {{ R1_file_type }}
      filesize: {{ R1_file_size }}
      url: {{ R1_url }}
      urltype: https
      md5: {{ R1_md5sum }}
- !Read
  read_id: {{ I1_file_id }}
