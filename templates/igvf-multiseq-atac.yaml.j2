  modality: atac
  primer_id: atac-nextera_read2
  min_len: {{ R3_min_len }}
  max_len: {{ R3_max_len }}
  strand: neg
  files:
    - !File
      file_id: {{ R3_file_id }}
      filename: {{ R3_file_name }}
      filetype: {{ R3_file_type }}
      filesize: {{ R3_file_size }}
      url: {{ R3_url }}
      urltype: https
      md5: {{ R3_md5sum }}
